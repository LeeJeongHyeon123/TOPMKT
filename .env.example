# 탑마케팅 플랫폼 환경 설정 예시
# 실제 운영 시 .env 파일로 복사하여 실제 값으로 변경하세요

# 데이터베이스 설정
DB_HOST=localhost
DB_NAME=topmkt
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_CHARSET=utf8mb4

# Firebase 설정
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your_project-default-rtdb.firebaseio.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# SMS 인증 설정 (Cool SMS)
SMS_API_KEY=your_coolsms_api_key
SMS_API_SECRET=your_coolsms_api_secret
SMS_FROM=your_phone_number

# 이메일 설정
MAIL_HOST=smtp.your_provider.com
MAIL_PORT=587
MAIL_USERNAME=your_email@domain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls

# 애플리케이션 설정
APP_NAME=탑마케팅
APP_URL=https://your-domain.com
APP_ENV=production
APP_DEBUG=false

# 보안 키
APP_KEY=your_32_character_secret_key
JWT_SECRET=your_jwt_secret_key

# 파일 업로드 설정
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/assets/uploads/

# 캐시 설정
CACHE_DRIVER=file
CACHE_LIFETIME=3600

# 세션 설정
SESSION_LIFETIME=7200
SESSION_COOKIE_NAME=topmkt_session